<Page x:ConnectionId='1'
    x:Class="FolderMusic.PlaylistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FolderMusic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="playlistPage"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="76"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Name}" FontSize="50" Margin="15,0,0,5"/>

        <Hub Grid.Row="1" Style="{StaticResource HHeaderRelativePath}"
             Header="{Binding AbsolutePath,Converter={StaticResource relativePathConverter}}" >
            <HubSection Header="Default" Style="{StaticResource HSHeader}" Margin="0,-10,0,0">
                <DataTemplate>
                    <local:ShuffleOffSongsView x:ConnectionId='5' Margin="0,-30,0,0" Source="{Binding Source}"
                                                                                                          />
                </DataTemplate>
            </HubSection>

            <HubSection Header="Shuffle" Style="{StaticResource HSHeader}" Margin="0,-10,0,0">
                <DataTemplate>
                    <local:ShuffleSongsView x:ConnectionId='4' Margin="0,-30,0,0" Source="{Binding Source}"
                                                                                                       />
                </DataTemplate>
            </HubSection>
        </Hub>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image x:ConnectionId='2' Grid.Column="0" Name="imgShuffle"                        
                   Source="{Binding Shuffle, Converter={StaticResource shuffleConverter}}"/>
            <Image x:ConnectionId='3' Grid.Column="1" Name="imgLoop"                     
                   Source="{Binding Loop, Converter={StaticResource loopConverter}}"/>
        </Grid>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='6' Label="Refresh" Icon="Refresh"                                  />
                <AppBarButton x:ConnectionId='7' Label="Update" Icon="Redo"                                 />
                <AppBarButton x:ConnectionId='8' Label="New Songs" Icon="Add"                                />
                <AppBarButton x:ConnectionId='9' Label="Delete" Icon="Delete"                                 />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

