<Page x:ConnectionId='1'
    x:Class="FolderMusic.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FolderMusic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Hub Grid.Row="0" Name="hub" Header="FolderMusic" Style="{StaticResource HHeader}" Margin="0,5,0,0">
            <HubSection Background="Transparent" Margin="0,-10,0,0" 
                        DataContext="{Binding CurrentPlaylist,Converter={StaticResource playlistViewModelConverter}}"
                        Header="{Binding Name}" Style="{StaticResource HSHeader}">
                <DataTemplate>
                    <local:ShuffleSongsView x:ConnectionId='5' Margin="0,-30,0,0" Source="{Binding Source}"
                                                                                                />
                </DataTemplate>
            </HubSection>

            <HubSection Header="Playlists" Style="{StaticResource HSHeader}" Margin="0,-10,0,0">
                <DataTemplate>
                    <local:PlaylistsView Margin="0,-30,0,0" Source="{Binding Library}"/>
                </DataTemplate>
            </HubSection>
        </Hub>

        <Grid x:ConnectionId='2' Grid.Row="1"                             HorizontalAlignment="Stretch"
              DataContext="{Binding CurrentPlaylist,Converter={StaticResource playlistViewModelConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{Binding CurrentSongTitle}" FontSize="25" Margin="10,0" 
                       TextWrapping="Wrap" HorizontalAlignment="Stretch"
                       Foreground="{ThemeResource AppBarItemForegroundThemeBrush}"/>

            <TextBlock Grid.Row="1" Text="{Binding CurrentSongArtist}" FontSize="20" Margin="10,0"
                       FontStyle="Italic" TextWrapping="Wrap" HorizontalAlignment="Stretch"
                       Foreground="{ThemeResource ApplicationPointerOverForegroundThemeBrush}"/>
        </Grid>

        <Grid Grid.Row="2" x:Name="dg">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"
                  DataContext="{Binding CurrentPlaylist,Converter={StaticResource playlistViewModelConverter}}">
                <Grid.Resources>
                    <Storyboard x:Name="ShuffleImageTap">
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                                                       Storyboard.TargetName="ShuffleImage" AutoReverse="True">
                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-10"/>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </Grid.Resources>

                <Image x:ConnectionId='4' Grid.Column="0" x:Name="ShuffleImage" 
                       Source="{Binding Shuffle,Converter={StaticResource shuffleConverter}}"
                                                                                            
                                                                 >
                    <Image.RenderTransform>
                        <CompositeTransform TranslateY="0"/>
                    </Image.RenderTransform>
                </Image>
            </Grid>

            <local:Slider Grid.Column="1" Height="60" Library="{Binding Library}" Player="{Binding BackgroundPlayer}"/>

            <Grid Grid.Column="2"
                  DataContext="{Binding CurrentPlaylist,Converter={StaticResource playlistViewModelConverter}}">
                <Grid.Resources>
                    <Storyboard x:Name="LoopImageTap">
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" 
                                                       Storyboard.TargetName="LoopImage" AutoReverse="True">
                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-10"/>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </Grid.Resources>

                <Image x:ConnectionId='3' Grid.Column="2" x:Name="LoopImage" 
                       Source="{Binding Loop,Converter={StaticResource loopConverter}}"
                                                                                      
                                                              >
                    <Image.RenderTransform>
                        <CompositeTransform TranslateY="0"/>
                    </Image.RenderTransform>
                </Image>
            </Grid>
        </Grid>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='6' Label="Previous" Icon="Previous"                       />
                <AppBarButton x:ConnectionId='7' Label="{Binding IsPlaying,Converter={StaticResource playPauseTextConverter}}" 
                              Icon="{Binding IsPlaying,Converter={StaticResource playPauseIconConverter}}" 
                                                     />
                <AppBarButton x:ConnectionId='8' Label="Next" Icon="Next"                   />
            </CommandBar.PrimaryCommands>

            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='9' Label="Refresh Library"                                      />
                <AppBarButton x:ConnectionId='10' Label="Update all playlists"                                      />
                <AppBarButton x:ConnectionId='11' Label="Add new playlists"                                      />
                <AppBarButton x:ConnectionId='12' Label="Settings"                       />
                <AppBarButton x:ConnectionId='13' Label="Debug Site"                           />
                <AppBarButton x:ConnectionId='14' Label="Music Properties"                                 />
                <AppBarButton x:ConnectionId='15' Label="Test0"                       />
                <AppBarButton x:ConnectionId='16' Label="Test1"                       />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

