<Page x:ConnectionId='1'
    x:Class="FolderMusic.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FolderMusic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                                           >

    <Page.Resources>
        <local:BoolToPlayIcon x:Key="PlayConverter"/>
        <local:BoolToDetailIcon x:Key="DetailConverter"/>
        <local:ShuffleToIcon x:Key="ShuffleConverter"/>
        <local:LoopToIcon x:Key="LoopConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Hub Grid.Row="0" Name="hub" Header="FolderMusic" Style="{StaticResource HHeader}" Margin="0,5,0,0">
            <HubSection Background="Transparent" Margin="0,-10,0,0"
                        Header="{Binding CurrentPlaylistName}" Style="{StaticResource HSHeader}">
                <DataTemplate>
                    <local:SongListView x:ConnectionId='14' Margin="0,-30,0,0" Source="{Binding CurrentPlaylist}"
                                        SongsSource="Shuffle"                                                     />
                </DataTemplate>
            </HubSection>

            <HubSection Header="Playlists" Style="{StaticResource HSHeader}" Margin="0,-10,0,0">
                <DataTemplate>
                    <ListBox x:Name="lbxPlaylists" SelectionMode="Single" Background="Transparent" Margin="0,-30,0,0"
                             ItemsSource="{Binding Playlists}" SelectedIndex="{Binding PlaylistsIndex,Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid x:ConnectionId='6'                                    >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <FlyoutBase.AttachedFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem x:ConnectionId='7' Text="Refresh"                              />
                                            <MenuFlyoutItem x:ConnectionId='8' Text="Update"                             />
                                            <MenuFlyoutItem x:ConnectionId='9' Text="Search for New Songs"                                        />
                                            <MenuFlyoutItem x:ConnectionId='10' Text="Delete"                             />
                                        </MenuFlyout>
                                    </FlyoutBase.AttachedFlyout>

                                    <StackPanel Orientation="Vertical">
                                        <Image x:ConnectionId='12' Source="{Binding IsEmptyOrLoading, Converter={StaticResource PlayConverter}}"
                                               Margin="0,0,0,5" Width="30" Height="30"                             />
                                        <Image x:ConnectionId='13' Source="{Binding IsEmptyOrLoading, Converter={StaticResource DetailConverter}}"
                                               Width="30" Height="30"                               />
                                    </StackPanel>

                                    <Grid x:ConnectionId='11' Grid.Column="1"                         >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" Foreground="{ThemeResource AppBarItemForegroundThemeBrush}"
                                                       TextWrapping="WrapWholeWords"
                                                       Margin="10,0,0,0" FontSize="20" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding SongCount}" 
                                                       Foreground="{ThemeResource ApplicationPointerOverForegroundThemeBrush}"
                                                       Margin="10,0,0,0" FontSize="10" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <Rectangle Grid.Column="1" Fill="Transparent" Width="1500"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DataTemplate>
            </HubSection>
        </Hub>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid x:ConnectionId='5'                            >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding CurrentSongTitle}" FontSize="25" Margin="10,0" TextWrapping="Wrap" 
                               Foreground="{ThemeResource AppBarItemForegroundThemeBrush}"/>
                    <Rectangle Fill="Transparent" Width="1500"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding CurrentSongArtist}" FontSize="20" Margin="10,0" FontStyle="Italic"
                               Foreground="{ThemeResource ApplicationPointerOverForegroundThemeBrush}"/>
                    <Rectangle Fill="Transparent" Width="1500"/>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.Resources>
                    <Storyboard x:Name="ShuffleImageTap">
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                                                   Storyboard.TargetName="ShuffleImage" AutoReverse="True">
                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-10"/>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </Grid.Resources>

                <Image x:ConnectionId='4' Grid.Column="0" x:Name="ShuffleImage" Source="{Binding CurrentPlaylistShuffleIcon}"
                                                                                                                                      >
                    <Image.RenderTransform>
                        <CompositeTransform TranslateY="0"/>
                    </Image.RenderTransform>
                </Image>
            </Grid>

            <Slider x:ConnectionId='2' Grid.Column="1" Height="60" VerticalAlignment="Top" Minimum="0" Maximum="1" 
                    Value="{Binding PlayerPositionPercent,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                    SnapsTo="StepValues" StepFrequency="0.001"                                    />

            <TextBlock Grid.Column="1" Text="{Binding PlayerPositionText}" VerticalAlignment="Bottom"
                       HorizontalAlignment="Left" FontSize="20"/>
            <TextBlock Grid.Column="1" Text="{Binding PlayerDurationText}" VerticalAlignment="Bottom" 
                       HorizontalAlignment="Right" FontSize="20"/>

            <Grid Grid.Column="2">
                <Grid.Resources>
                    <Storyboard x:Name="LoopImageTap">
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" 
                                                   Storyboard.TargetName="LoopImage" AutoReverse="True">
                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-10"/>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </Grid.Resources>

                <Image x:ConnectionId='3' Grid.Column="2" x:Name="LoopImage" Source="{Binding CurrentPlaylistLoopIcon}"                     
                                                                                                        >
                    <Image.RenderTransform>
                        <CompositeTransform TranslateY="0"/>
                    </Image.RenderTransform>
                </Image>
            </Grid>
        </Grid>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='15' Label="Previous" Icon="Previous"                       />
                <AppBarButton x:ConnectionId='16' Label="{Binding PlayPauseText}" Icon="{Binding PlayPauseIcon}"                        />
                <AppBarButton x:ConnectionId='17' Label="Next" Icon="Next"                   />
            </CommandBar.PrimaryCommands>

            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='18' Label="Refresh Library"                                      />
                <AppBarButton x:ConnectionId='19' Label="Update existing playlists"                                      />
                <AppBarButton x:ConnectionId='20' Label="Add not existing playlists"                                      />
                <AppBarButton x:ConnectionId='21' Label="Settings"                       />
                <AppBarButton x:ConnectionId='22' Label="Debug Site"                           />
                <AppBarButton x:ConnectionId='23' Label="Music Properties"                            />
                <AppBarButton x:ConnectionId='24' Label="Foreground Debug Data"                           />
                <AppBarButton x:ConnectionId='25' Label="Add false Playlist"                            />
                <AppBarButton x:ConnectionId='26' Label="Ask for Reply"                            />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

