<UserControl
    x:Class="FolderMusic.PlaylistsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FolderMusic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="200"
    xmlns:con="using:FolderMusic.Converters">

    <UserControl.Resources>
        <con:PlayIconConverter x:Key="playConverter"/>
        <con:DetailIconConverter x:Key="detailConverter"/>
    </UserControl.Resources>

    <ListBox x:ConnectionId='1' x:Name="lbxPlaylists" SelectionMode="Single" Background="Transparent"
                                                        >
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid x:ConnectionId='2'                           >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:ConnectionId='3' Text="Refresh"                              />
                            <MenuFlyoutItem x:ConnectionId='4' Text="Update"                             />
                            <MenuFlyoutItem x:ConnectionId='5' Text="Search for New Songs"                                        />
                            <MenuFlyoutItem x:ConnectionId='6' Text="Delete"                             />
                        </MenuFlyout>
                    </FlyoutBase.AttachedFlyout>

                    <StackPanel Orientation="Vertical">
                        <Image x:ConnectionId='8' Source="{Binding Converter={StaticResource playConverter}}"
                               Margin="0,0,0,5" Width="30" Height="30"                             />
                        <Image x:ConnectionId='9' Source="{Binding Converter={StaticResource detailConverter}}"
                               Width="30" Height="30"                               
                                                                             
                                                                           />
                    </StackPanel>

                    <Grid x:ConnectionId='7' Grid.Column="1"                         >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}" TextWrapping="WrapWholeWords"
                                       Foreground="{ThemeResource AppBarItemForegroundThemeBrush}"
                                       Margin="10,0,0,0" FontSize="20" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SongsCount,Converter={StaticResource songsCountConverter}}" 
                                       Foreground="{ThemeResource ApplicationPointerOverForegroundThemeBrush}"
                                       Margin="10,0,0,0" FontSize="10" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Rectangle Grid.Column="1" Fill="Transparent" Width="1500"/>
                    </Grid>
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>

