<Page x:ConnectionId='1'
    x:Class="MusicPlayerApp.PlaylistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicPlayerApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="76"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Name}" FontSize="50" Margin="15,0,0,5"/>

        <Hub Grid.Row="1" Header="{Binding RelativePath}" Style="{StaticResource HHeaderRelativePath}">
            <HubSection Header="Default" Style="{StaticResource HSHeader}" Margin="0,-10,0,0">
                <DataTemplate>
                    <ListBox x:ConnectionId='8' ItemsSource="{Binding DefaultSongs}" Background="Transparent" Margin="0,-30,0,0"
                             SelectedIndex="{Binding DefaultCurrentSongIndex,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                                                    >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid x:ConnectionId='9'                                                                  >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <FlyoutBase.AttachedFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem x:ConnectionId='10' Text="Refresh"                          />
                                            <MenuFlyoutItem x:ConnectionId='11' Text="Delete"                         />
                                        </MenuFlyout>
                                    </FlyoutBase.AttachedFlyout>

                                    <StackPanel Orientation="Vertical">
                                        <TextBlock FontSize="20" Margin="0,-5,0,-2"
                                               Text="{Binding Title}" Foreground="{Binding TextBrush}"/>
                                        <TextBlock FontSize="15" Margin="0,-2,0,0"
                                               Text="{Binding Artist}" Foreground="{Binding TextBrush}" />
                                    </StackPanel>

                                    <Rectangle Grid.Column="2" Fill="Transparent" Width="1000"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DataTemplate>
            </HubSection>

            <HubSection Header="Shuffle" Style="{StaticResource HSHeader}" Margin="0,-10,0,0">
                <DataTemplate>
                    <ListBox x:ConnectionId='4' ItemsSource="{Binding ShuffleSongs}" Background="Transparent" Margin="0,-30,0,0"
                             SelectedIndex="{Binding ShuffleCurrentSongIndex,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                                                    >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid x:ConnectionId='5'                                                                  >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <FlyoutBase.AttachedFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem x:ConnectionId='6' Text="Refresh"                          />
                                            <MenuFlyoutItem x:ConnectionId='7' Text="Delete"                         />
                                        </MenuFlyout>
                                    </FlyoutBase.AttachedFlyout>

                                    <StackPanel Orientation="Vertical">
                                        <TextBlock FontSize="20" Margin="0,-5,0,-2"
                                               Text="{Binding Title}" Foreground="{Binding TextBrush}"/>
                                        <TextBlock FontSize="15" Margin="0,-2,0,0"
                                               Text="{Binding Artist}" Foreground="{Binding TextBrush}" />
                                    </StackPanel>

                                    <Rectangle Grid.Column="2" Fill="Transparent" Width="1000"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DataTemplate>
            </HubSection>
        </Hub>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image x:ConnectionId='2' Grid.Column="0" Source="{Binding ShuffleIcon}"                        />
            <Image x:ConnectionId='3' Grid.Column="1" Source="{Binding LoopIcon}"                     />
        </Grid>
    </Grid>
</Page>

