<Page x:ConnectionId='1'
    x:Class="FolderMusic.PlaylistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FolderMusic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="playlistPage"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="76"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Name}" FontSize="50" Margin="15,0,0,5"/>

        <Hub Grid.Row="1" Header="{Binding RelativePath}" Style="{StaticResource HHeaderRelativePath}">
            <HubSection Header="Default" Style="{StaticResource HSHeader}" Margin="0,-10,0,0">
                <DataTemplate>
                    <local:SongListView Margin="0,-30,0,0" Source="{Binding ElementName=playlistPage,Path=Playlist}"/>
                </DataTemplate>
            </HubSection>

            <HubSection Header="Shuffle" Style="{StaticResource HSHeader}" Margin="0,-10,0,0">
                <DataTemplate>
                    <local:SongListView Margin="0,-30,0,0" SongsSource="Shuffle"
                                        Source="{Binding ElementName=playlistPage,Path=Playlist}"/>
                </DataTemplate>
            </HubSection>
        </Hub>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
          
            <Image x:ConnectionId='2' Grid.Column="0"                        
                       Source="{Binding Shuffle, Converter={StaticResource ShuffleConverter}}"/>
            <Image x:ConnectionId='3' Grid.Column="1"                     
                       Source="{Binding Loop, Converter={StaticResource LoopConverter}}"/>
        </Grid>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='4' Label="Refresh" Icon="Refresh"                                  />
                <AppBarButton x:ConnectionId='5' Label="Update" Icon="Redo"                                 />
                <AppBarButton x:ConnectionId='6' Label="New Songs" Icon="Add"                                />
                <AppBarButton x:ConnectionId='7' Label="Delete" Icon="Delete"                                 />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

