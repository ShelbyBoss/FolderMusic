<Page
    x:Class="FolderMusic.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FolderMusic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Hub Grid.Row="0" Name="hub" Header="FolderMusic" Style="{StaticResource HHeader}" Margin="0,5,0,0">
            <HubSection Background="Transparent" Margin="0,-10,0,0"
                        Header="{Binding CurrentPlaylistName}" Style="{StaticResource HSHeader}">
                <DataTemplate>
                    <local:ShuffleSongsView Margin="0,-30,0,0" Source="{Binding CurrentPlaylist}"
                                        DataContextChanged="SongListView_DataContextChanged"/>
                </DataTemplate>
            </HubSection>

            <HubSection Header="Playlists" Style="{StaticResource HSHeader}" Margin="0,-10,0,0">
                <DataTemplate>
                    <ListBox SelectionMode="Single" Background="Transparent" Margin="0,-30,0,0"
                             ItemsSource="{Binding Playlists,Converter={StaticResource playlistsConverter}}"
                             SelectedItem="{Binding CurrentPlaylist,Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Holding="PlaylistsPlaylist_Holding">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <FlyoutBase.AttachedFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem Text="Refresh" Click="RefreshPlaylist_Click"/>
                                            <MenuFlyoutItem Text="Update" Click="UpdatePlaylist_Click"/>
                                            <MenuFlyoutItem Text="Search for New Songs" Click="SearchForNewSongsPlaylist_Click"/>
                                            <MenuFlyoutItem Text="Delete" Click="DeletePlaylist_Click"/>
                                        </MenuFlyout>
                                    </FlyoutBase.AttachedFlyout>

                                    <StackPanel Orientation="Vertical">
                                        <Image Source="{Binding Converter={StaticResource playConverter}}"
                                                   Margin="0,0,0,5" Width="30" Height="30" Tapped="PlayPlaylist_Tapped"/>
                                        <Image Source="{Binding Converter={StaticResource detailConverter}}"
                                                   Width="30" Height="30" Tapped="DetailPlaylist_Tapped"/>
                                    </StackPanel>

                                    <Grid Grid.Column="1" Tapped="Playlist_Tapped">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" Foreground="{ThemeResource AppBarItemForegroundThemeBrush}"
                                                       TextWrapping="WrapWholeWords"
                                                       Margin="10,0,0,0" FontSize="20" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding SongsCount,Converter={StaticResource songsCountConverter}}" 
                                                       Foreground="{ThemeResource ApplicationPointerOverForegroundThemeBrush}"
                                                       Margin="10,0,0,0" FontSize="10" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <Rectangle Grid.Column="1" Fill="Transparent" Width="1500"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DataTemplate>
            </HubSection>
        </Hub>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Tapped="CurrentSong_Tapped">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding CurrentSongTitle}" FontSize="25" Margin="10,0" TextWrapping="Wrap" 
                               Foreground="{ThemeResource AppBarItemForegroundThemeBrush}"/>
                    <Rectangle Fill="Transparent" Width="1500"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding CurrentSongArtist}" FontSize="20" Margin="10,0" FontStyle="Italic"
                               Foreground="{ThemeResource ApplicationPointerOverForegroundThemeBrush}"/>
                    <Rectangle Fill="Transparent" Width="1500"/>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.Resources>
                    <Storyboard x:Name="ShuffleImageTap">
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                                                       Storyboard.TargetName="ShuffleImage" AutoReverse="True">
                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-10"/>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </Grid.Resources>

                <Image Grid.Column="0" x:Name="ShuffleImage" Source="{Binding CurrentPlaylistShuffleIcon}"
                       Tapped="Shuffle_Tapped" PointerEntered="ShuffleImage_PointerEntered" PointerExited="ShuffleImage_PointerExited">
                    <Image.RenderTransform>
                        <CompositeTransform TranslateY="0"/>
                    </Image.RenderTransform>
                </Image>
            </Grid>

            <local:Slider Grid.Column="1" Height="60" Library="{Binding Library}" Player="{Binding BackgroundPlayer}"/>

            <Grid Grid.Column="2">
                <Grid.Resources>
                    <Storyboard x:Name="LoopImageTap">
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" 
                                                       Storyboard.TargetName="LoopImage" AutoReverse="True">
                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                            <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-10"/>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </Grid.Resources>

                <Image Grid.Column="2" x:Name="LoopImage" Source="{Binding CurrentPlaylistLoopIcon}" Tapped="Loop_Tapped"
                       PointerEntered="LoopImage_PointerEntered" PointerExited="LoopImage_PointerExited">
                    <Image.RenderTransform>
                        <CompositeTransform TranslateY="0"/>
                    </Image.RenderTransform>
                </Image>
            </Grid>
        </Grid>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton Label="Previous" Icon="Previous" Click="Previous_Click"/>
                <AppBarButton Label="{Binding PlayPauseText}" Icon="{Binding PlayPauseIcon}" Click="PlayPause_Click"/>
                <AppBarButton Label="Next" Icon="Next" Click="Next_Click"/>
            </CommandBar.PrimaryCommands>

            <CommandBar.SecondaryCommands>
                <AppBarButton Label="Refresh Library" Click="ResetLibraryFromStorage_Click"/>
                <AppBarButton Label="Update existing playlists" Click="UpdateExistingPlaylists_Click"/>
                <AppBarButton Label="Add not existing playlists" Click="AddNotExistingPlaylists_Click"/>
                <AppBarButton Label="Settings" Click="Settings_Click"/>
                <AppBarButton Label="Debug Site" Click="TestFunktion_Click"/>
                <AppBarButton Label="Music Properties" Click="TestFunktion_Click2"/>
                <AppBarButton Label="Foreground Debug Data" Click="AppBarButton_Click"/>
                <AppBarButton Label="Add false Playlist" Click="TestFunktion_Click3"/>
                <AppBarButton Label="Ask for Reply" Click="TestFunktion_Click4"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
